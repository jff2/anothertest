<div class="page-header">
  <h1><%= @spot.title %><br> <small>Submitted by <%= @spot.user.email %></small></h1>
</div>
<p><%= @spot.spotcontent %></p>




<% if @spot.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Edit', edit_spot_path(@spot), class: "btn btn-default" %>
		<%= link_to 'Destroy', @spot, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>

